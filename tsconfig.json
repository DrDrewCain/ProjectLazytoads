{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "es2021"],
      "typeRoots": ["node_modules/@types", "src/@types"],
      "types": ["node"]
    },
    "files": ["src/@types/graphql.d.ts"],
    "include": ["src/**/*", "index.ts", "ConvertPlayerToJson.ts", "src/GameFile/Utils/.config.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }  