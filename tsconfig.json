{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "es2021"],
      "types": ["node"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
  }  